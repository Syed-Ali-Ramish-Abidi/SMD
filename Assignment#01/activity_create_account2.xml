<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createAccountActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/sociallyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SociallyText"
            android:textColor="@color/brown"
            android:layout_above="@+id/profileCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:textSize="48sp"
            android:textStyle="bold"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="50dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:src="@drawable/profilepic"
                android:layout_centerInParent="true"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameText"
            android:textColor="@color/black"
            android:layout_below="@+id/profileCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="@string/LoginText"
            app:cornerRadius="8dp"
            android:layout_below="@+id/nameText"
            android:layout_marginTop="-35dp"
            android:backgroundTint="@color/dark_brown"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/switchAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switchAccText"
            android:textColor="@color/brown"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/signUpContainer"
            android:layout_marginBottom="31dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/signUpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/haveAccText"
                android:textColor="@color/light_brown"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/signUpLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signupText"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>