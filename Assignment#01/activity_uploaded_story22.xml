<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".UploadStory20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <ImageView
            android:id="@+id/pic11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/paris"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="33dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="12dp">

            <View
                android:layout_marginTop="00dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/brokenlikefilled" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/brokenlikefilled"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/brokenlines"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/brokenlines"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/brokenlines"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/close_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:text="X"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true">

                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/feedCard2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/feedpic2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/profilepic"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali_Ramish"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="25dp"
                    />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/tick"
                    android:layout_toRightOf="@+id/highlight"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="5dp"
                    app:tint="@color/white"
                    android:src="@drawable/bluetick">

                </ImageView>
                <TextView
                    android:id="@+id/highlighttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11h"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/tick"
                    />

            </RelativeLayout>



        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="13">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/followingAccounts3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="0dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">
                            <ImageView
                                android:id="@+id/followingAccountsPic3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profilepic2"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/followingAccounts2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="3dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">
                            <ImageView
                                android:id="@+id/followingAccountsPic2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/profilepic"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/followingAccounts1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="30dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="false">
                            <ImageView
                                android:id="@+id/followingAccountsPic1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pic"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="Activity" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reels"
                        app:tint="@color/brown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="9sp"
                        android:text="Reels"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook"
                        app:tint="@color/brown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="4sp"
                        android:text="Facebook"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:src="@drawable/highlight"
                        app:tint="@color/brown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="5sp"
                        android:text="Highlight"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/threedotssmall"
                        app:tint="@color/brown"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="9sp"
                        android:text="more"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>