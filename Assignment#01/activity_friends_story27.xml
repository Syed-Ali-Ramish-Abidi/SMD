<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".FriendsStory1_6">
    <LinearLayout
        android:layout_weight="8.8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="16dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/joker"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/storyTopOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent">

                    <!-- Progress Bars (Broken Lines) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:layout_marginBottom="12dp">

                        <!-- Repeat for 5 segments -->
                        <View
                            android:layout_marginTop="00dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/brokenlikefilled" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/brokenlikefilled"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/brokenlines"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/brokenlines"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/brokenlines"/>
                    </LinearLayout>

                    <!-- Profile + Close Button Row -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <!-- Profile Pic -->
                        <LinearLayout
                            android:id="@+id/profileSection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/feedCard2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="50dp">

                                <ImageView
                                    android:id="@+id/feedpic2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/profilepic2"
                                    android:scaleType="centerCrop"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/storyUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/nameText3"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/storyTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="2h"
                                android:textColor="@color/light_grey"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <!-- Close Button -->
                        <ImageView
                            android:id="@+id/closeButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/cross"
                            app:tint="@color/white"
                            android:layout_marginEnd="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                            android:focusable="true"/>
                    </RelativeLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>




        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/brown"
                    android:background="@drawable/chatoval">

                    <ImageView
                        android:layout_marginStart="-3dp"
                        android:id="@+id/cameraIcon"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:src="@drawable/instalogo"
                        app:tint="@color/brown"/>

                    <EditText
                        android:id="@+id/messageHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:hint="@string/sendMsgText"
                        android:textColorHint="@color/brown"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/chats"
                        android:scaleType="centerCrop"
                        app:tint="@color/brown"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="28dp"
                        app:tint="@color/brown"
                        android:src="@drawable/threedotssmall" />
                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>