<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".UploadStory20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <ImageView
            android:id="@+id/nature_highlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/paris"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/closebutton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cross"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp" />

                    <View
                        android:layout_width="62dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/people"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/brown"
                        android:src="@drawable/aa"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/union"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp" />


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/music"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/threestars"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/threedots"
                        app:tint="@color/brown"
                        android:background="@drawable/blackcirclebackground"
                        android:padding="6dp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/closefriendroundedbg"
            android:padding="8dp"
            android:layout_marginEnd="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/feedCard22"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/feedpic22a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/profilepic"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your stories"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/closefriendroundedbg"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/feedCard2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/feedpic2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/closefriends"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Friends"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/back_arrow"
                app:tint="@color/brown"
                android:rotation="180"
                android:background="@drawable/closefriendroundedbg"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>